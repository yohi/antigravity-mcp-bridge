{
    "name": "antigravity-mcp-extension",
    "displayName": "Antigravity MCP Bridge",
    "description": "Exposes Antigravity IDE workspace state via WebSocket for MCP bridge integration",
    "version": "1.0.0",
    "publisher": "antigravity",
    "repository": {
        "type": "git",
        "url": "https://github.com/antigravity/mcp-bridge"
    },
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Antigravity MCP Bridge",
            "properties": {
                "antigravity.mcp.port": {
                    "type": "number",
                    "default": 8888,
                    "description": "WebSocketサーバーのポート番号"
                },
                "antigravity.mcp.token": {
                    "type": "string",
                    "default": "",
                    "description": "認証用トークン（空の場合は起動時に自動生成）"
                },
                "antigravity.mcp.readOnly": {
                    "type": "boolean",
                    "default": false,
                    "description": "trueの場合、書き込み操作を拒否"
                },
                "antigravity.mcp.maxFileSize": {
                    "type": "number",
                    "default": 102400,
                    "description": "読み込み可能な最大バイト数（デフォルト100KB）"
                },
                "antigravity.mcp.llmTimeout": {
                    "type": "number",
                    "default": 60,
                    "description": "llm/ask で応答を待つ最大秒数（デフォルト60秒）"
                }
            }
        },
        "commands": [
            {
                "command": "antigravity-mcp-bridge.testPrompt",
                "title": "Antigravity MCP Bridge: Test Prompt"
            },
            {
                "command": "antigravity-mcp-bridge.diagnoseCommands",
                "title": "Antigravity MCP Bridge: Diagnose Commands"
            },
            {
                "command": "antigravity-mcp-bridge.testDiagnostics",
                "title": "Antigravity MCP Bridge: Test Diagnostics"
            },
            {
                "command": "antigravity-mcp-bridge.testLlmAsk",
                "title": "Antigravity MCP Bridge: Test llm/ask Flow"
            },
            {
                "command": "antigravity-mcp-bridge.testCascadeCommands",
                "title": "Antigravity MCP Bridge: Test Cascade Commands"
            },
            {
                "command": "antigravity-mcp-bridge.testSendPrompt",
                "title": "Antigravity MCP Bridge: Test Send Prompt"
            },
            {
                "command": "antigravity-mcp-bridge.testInternalApis",
                "title": "Antigravity MCP Bridge: Test Internal APIs"
            },
            {
                "command": "antigravity-mcp-bridge.testStoragePath",
                "title": "Antigravity MCP Bridge: Test Storage Paths"
            }
        ]
    },
    "scripts": {
        "build": "npx tsc -p ./",
        "compile": "npx tsc -p ./",
        "watch": "npx tsc -watch -p ./",
        "clean": "rm -rf out"
    },
    "dependencies": {
        "@antigravity-mcp-bridge/shared": "^1.0.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@types/ws": "^8.5.0",
        "typescript": "^5.7.0"
    }
}